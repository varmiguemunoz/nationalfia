---
import config from '../config/config.json';
import { ViewTransitions } from 'astro:transitions';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title?: string;
  meta_title?: string;
  description?: string;
  image?: string;
  noindex?: boolean;
  canonical?: string;
  blogpost?: boolean;
}

const { title, meta_title, description, noindex } = Astro.props;

import '@styles/global.css';
---

<!doctype html>
<html lang="en">
  <head>
    <link rel="shortcut icon" href={config.site.favicon} />
    <!-- theme meta -->
    <meta name="theme-name" content="bookworm-light-astro" />
    <meta name="msapplication-TileColor" content="#000000" />
    <meta name="theme-color" media="(prefers-color-scheme: light)" content="#fff" />
    <meta name="generator" content={Astro.generator} />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <!-- responsive meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5" />

    <title>{meta_title ? meta_title : title ? title : config.site.title}</title>
    <meta name="title" content={meta_title ? meta_title : title ? title : config.site.title} />
    <link rel="canonical" href={`${config.site.base_url}/${Astro.url.pathname.replace('/', '')}`} item-prop="url" />
    {noindex && <meta name="robots" content="noindex,nofollow" />}
    <meta name="description" content={description ? description : config.metadata.meta_description} />
    <!-- author from config.json -->
    <meta name="author" content={config.metadata.meta_author} />
    <!-- og-title -->
    <meta property="og:title" content={meta_title ? meta_title : title ? title : config.site.title} />
    <!-- og-description -->
    <meta property="og:description" content={description ? description : config.metadata.meta_description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`${config.site.base_url}/${Astro.url.pathname.replace('/', '')}`} />

    <!-- twitter-title -->
    <meta name="twitter:title" content={meta_title ? meta_title : title ? title : config.site.title} />
    <!-- twitter-description -->
    <meta name="twitter:description" content={description ? description : config.metadata.meta_description} />

    <meta property="og:image" content={config.author.avatar} />

    <meta name="twitter:image" content={config.author.avatar} />
    <meta name="twitter:card" content="summary_large_image" />

    <ViewTransitions />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "National FIA",
        "url": "https://www.nationalfia.org/",
        "logo": "https://www.nationalfia.org/logo.webp",
        "description": "National FIA provides consumer protection resources, professional standards, educational materials, and services to support financial integrity and industry best practices.",
        "sameAs": [
          "https://www.nationalfia.org/",
          "https://www.nationalfia.org/blog/",
          "https://www.nationalfia.org/contact/",
          "https://www.nationalfia.org/resources/professional-standards/",
          "https://www.nationalfia.org/services/consumer-protection/"
        ],
        "contactPoint": {
          "@type": "ContactPoint",
          "contactType": "customer support",
          "url": "https://www.nationalfia.org/contact/"
        },
        "hasPart": [
          {
            "@type": "WebPage",
            "url": "https://www.nationalfia.org/blog/",
            "name": "Blog"
          },
          {
            "@type": "WebPage",
            "url": "https://www.nationalfia.org/contact/",
            "name": "Contact"
          },
          {
            "@type": "WebPage",
            "url": "https://www.nationalfia.org/resources/professional-standards/",
            "name": "Professional Standards"
          },
          {
            "@type": "WebPage",
            "url": "https://www.nationalfia.org/services/consumer-protection/",
            "name": "Consumer Protection Services"
          },
          {
            "@type": "WebPage",
            "url": "https://www.nationalfia.org/legal/privacy-policy/",
            "name": "Privacy Policy"
          },
          {
            "@type": "WebPage",
            "url": "https://www.nationalfia.org/legal/terms-and-conditions/",
            "name": "Terms and Conditions"
          }
        ]
      }
    </script>
  </head>
  <body>
    <Navbar />
    <main class="flex w-full flex-col items-center justify-center bg-slate-100">
      <slot />
    </main>
    <Footer />
  </body>
</html>
