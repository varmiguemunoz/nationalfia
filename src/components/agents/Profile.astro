<!-- ================= AGENT PROFILE ================= -->
<section class="mt-8 w-full border-2 border-slate-300 bg-white">
  <div class="border-b-2 border-slate-300 bg-slate-100 p-4 text-[1.05rem] uppercase tracking-wider text-slate-900">
    Agent Profile
  </div>
  <div class="p-5">
    <div class="flex flex-col items-start gap-4 lg:flex-row lg:gap-8">
      <div class="relative shrink-0">
        <img src="[acf field=head_shot]" alt="Agent Headshot" class="h-[260px] w-[190px] object-cover" />
        <div class="absolute left-2 top-2 flex h-12 w-12 items-center justify-center overflow-hidden">
          <img
            src="https://nationalfia.org/wp-content/uploads/2024/07/NFIA-LOGO-COLOR.png"
            alt="NFIA Badge"
            class="h-full w-full object-contain"
          />
        </div>
        <div class="absolute right-2 top-2 bg-green-700 px-2 py-1 text-[0.7rem] uppercase tracking-wider text-white">
          Verified
        </div>
      </div>
      <div class="flex-1">
        <h2 class="mb-1 text-[1.7rem] uppercase tracking-wider text-slate-900">[acf field="name"]</h2>
        <p class="mb-4 uppercase text-slate-700">Certified Insurance Professional</p>

        <div class="mt-4 grid grid-cols-1 gap-4 lg:grid-cols-2">
          <div class="border border-slate-300 bg-slate-50 p-4">
            <p class="mb-1 text-xs uppercase text-slate-700">Official NFIA Membership Number</p>
            <p class="text-lg text-slate-900">[acf field="license_number"]</p>
          </div>
          <div class="border border-slate-300 bg-slate-50 p-4">
            <p class="mb-1 text-xs uppercase text-slate-700">NPN License Number</p>
            <p class="text-lg text-slate-900">[acf field="npn"] âœ”</p>
          </div>
        </div>

        <div class="mt-4">
          <a
            class="inline-flex items-center gap-2 border-2 border-blue-700 bg-blue-700 px-4 py-2 text-sm uppercase tracking-wide text-white"
            href="[acf field=schedule_url]"
            title="Schedule a Call"
          >
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6"
              ><path
                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.86 19.86 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6A19.86 19.86 0 0 1 2.09 4.18 2 2 0 0 1 4 2h3a2 2 0 0 1 2 1.72c.12 1.05.35 2.06.68 3.03a2 2 0 0 1-.45 2.11L9.91 10.09a15.05 15.05 0 0 0 6 6l1.23-1.23a2 2 0 0 1 2.11-.45c.97.33 1.98.56 3.03.68A2 2 0 0 1 22 16.92z"
              ></path></svg
            >
            Schedule a Call
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
