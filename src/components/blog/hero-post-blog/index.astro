---
import { Tag, Calendar, Clock } from 'lucide-react';
import { Badge } from '@/components/ui/badge';

type Props = {
  blogPost: {
    slug: string;
    id: string;
    featured: string;
    title: string;
    description: string;
    publishedAt: string;
    category: {
      title: string;
    }[];
  };
  formatDate: (arg: any) => void;
};

const { blogPost, formatDate } = Astro.props;
---

<section class="w-full overflow-hidden overflow-x-hidden px-4 pb-12">
  <div class="mx-auto w-full max-w-4xl">
    <div class="relative w-full">
      {/* Background glow effect */}

      <div class="relative w-full text-center">
        {/* Category and Featured Badge */}
        <div class="mb-6 flex items-center justify-center gap-3">
          <Badge variant="outline" className="border-primary/30 bg-gray-800 text-white">
            <Tag className="mr-1 h-3 w-3" />
            {blogPost.category[0].title}
          </Badge>
        </div>

        {/* Title */}
        <h1 class="mb-6 text-4xl font-bold leading-tight text-black md:text-5xl lg:text-6xl">
          {blogPost.title}
        </h1>

        {/* Subtitle */}
        <p class="mx-auto mb-8 max-w-3xl text-xl leading-relaxed text-black md:text-2xl">
          {blogPost?.description}
        </p>

        {/* Meta Information */}
        <div class="flex flex-wrap items-center justify-center gap-6 text-sm text-muted-foreground">
          <div class="flex items-center">
            <Calendar className="mr-2 h-4 w-4" />
            {formatDate(blogPost.publishedAt)}
          </div>
          <div class="flex items-center">
            <Clock className="mr-2 h-4 w-4" />
            5 mins
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
