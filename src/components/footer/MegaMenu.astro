---
import type { FooterSection } from '@/lib/navigation';

export interface Props {
  sections: FooterSection[];
}

const { sections } = Astro.props as Props;
---

<div class="grid grid-cols-1 items-start justify-center gap-6 sm:grid-cols-2 md:grid-cols-3">
  {
    sections.map((section) => (
      <div>
        <h4 class="mb-2 text-xs uppercase tracking-widest text-white">{section.title}</h4>
        <ul class="space-y-1 text-sm text-slate-400">
          {section.items.map((item) => (
            <li>
              {item.href ? (
                <a href={item.href} class="text-inherit no-underline">
                  {item.label}
                </a>
              ) : (
                <span>{item.label}</span>
              )}
            </li>
          ))}
        </ul>
      </div>
    ))
  }
</div>
