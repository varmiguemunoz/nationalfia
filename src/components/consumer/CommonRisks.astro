---
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { ShieldAlert, AlertCircle, AlertTriangle, FileX } from 'lucide-react';

const risks = [
  { icon: ShieldAlert, text: 'Misleading illustrations of returns' },
  { icon: AlertCircle, text: 'Hidden policy charges and fees' },
  { icon: AlertTriangle, text: 'Unsuitable recommendations' },
  { icon: FileX, text: 'Lack of ongoing policy reviews' },
];
---

<section class="w-full bg-white">
  <div class="mx-auto max-w-7xl px-6 py-16">
    <h2 class="mb-8 text-3xl font-bold text-gray-800">Common Risks in IUL Insurance</h2>
    <div class="grid gap-4 md:grid-cols-2">
      {
        risks.map((risk) => (
          <Card className="rounded-xl shadow-sm border border-gray-200">
            <CardHeader className="flex flex-row items-center gap-3 pb-3">
              <risk.icon className="h-5 w-5 text-red-600" />
              <CardTitle className="text-lg font-bold text-white">{risk.text}</CardTitle>
            </CardHeader>
            <CardContent className="pt-0">
              <p class="text-sm text-white/80">
                Understanding these risks helps you make informed decisions and protect your financial future.
              </p>
            </CardContent>
          </Card>
        ))
      }
    </div>
  </div>
</section>
