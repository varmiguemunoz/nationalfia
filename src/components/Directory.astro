<section class="w-full py-0">
  <div class="mx-auto max-w-6xl">
    <div class="border-2 border-slate-300 bg-white">
      <div class="border-b-2 border-slate-300 bg-slate-100 p-4">
        <h2 class="text-[1.4rem] uppercase tracking-wider text-black">Find a Verified Agent</h2>
      </div>
      <div class="p-8">
        <div class="grid grid-cols-1 gap-12 lg:grid-cols-2">
          <div>
            <h3 class="mb-4 text-[1.125rem] uppercase tracking-wider text-black">Agent Directory Search</h3>
            <div class="mb-4 border-2 border-slate-300 bg-slate-50 p-5">
              <h4 class="mb-2 text-[1.125rem] uppercase tracking-wider text-black">Search Options</h4>
              <ul class="leading-6 text-slate-500">
                <li>Search by state and city</li>
                <li>Filter by insurance specialization</li>
                <li>Sort by experience level</li>
                <li>View verification status</li>
              </ul>
            </div>
            <a
              href="/search"
              class="inline-flex w-full items-center justify-center gap-2 border-2 border-blue-600 bg-blue-800 px-3 py-2 text-xs font-semibold uppercase tracking-wide text-white"
            >
              <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                ><circle cx="11" cy="11" r="7" stroke-width="2"></circle><line
                  x1="21"
                  y1="21"
                  x2="16.65"
                  y2="16.65"
                  stroke-width="2"></line></svg
              >
              Find Verified Agent
            </a>
          </div>
          <div>
            <h3 class="mb-4 text-[1.125rem] uppercase tracking-wider text-black">Verification Lookup</h3>
            <div class="mb-4 border-2 border-slate-300 bg-slate-50 p-5">
              <h4 class="mb-2 text-[1.125rem] uppercase tracking-wider text-black">Agent Verification</h4>
              <p class="mb-3 text-slate-500">
                Verify any agent's NFIA certification status using their membership number or NPN license number.
              </p>
              <ul class="leading-6 text-slate-500">
                <li>Real-time verification status</li>
                <li>Certification expiration dates</li>
                <li>Specialization areas</li>
                <li>Disciplinary action history</li>
              </ul>
            </div>
            <a
              href="/search"
              class="inline-flex w-full items-center justify-center gap-2 border-2 border-slate-500 bg-slate-700 px-3 py-2 text-xs font-semibold uppercase tracking-wide text-white"
            >
              <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                ><path d="M20 6L9 17l-5-5" stroke-width="2"></path></svg
              >
              Verify Agent Status
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
