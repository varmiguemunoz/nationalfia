---
const {
  items = [
    'Annual policy reviews',
    'Ongoing ethics & licensing education',
    'Avoid high-pressure sales',
    'Document recommendations clearly',
    'Transparent communication',
  ] as string[],
} = Astro.props;
---

<section class="w-full bg-white">
  <div class="mx-auto max-w-5xl px-4 py-12">
    <h2 class="mb-4 text-2xl font-semibold text-slate-900">Best Practices for Agents</h2>
    <ol class="list-decimal space-y-2 pl-5 text-slate-600">
      {items.map((i: string, idx: number) => <li>{i}</li>)}
    </ol>
  </div>
</section>
