---
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';

type Benefit = { title: string; body: string };

const {
  benefits = [
    { title: 'Trust', body: 'Transparent practices build client confidence and long-term relationships.' },
    { title: 'Growth', body: 'Sustainable, compliant growth through repeat business and referrals.' },
    { title: 'Risk Protection', body: 'Reduce compliance risk and protect client outcomes.' },
  ] as Benefit[],
} = Astro.props;
---

<section class="w-full bg-white">
  <div class="mx-auto max-w-5xl px-4 py-12">
    <h2 class="mb-6 text-2xl font-semibold text-slate-900">Benefits of High Standards</h2>
    <div class="grid gap-6 md:grid-cols-3">
      {
        benefits.map((b: Benefit) => (
          <Card key={b.title} className="h-full">
            <CardHeader>
              <CardTitle className="text-base font-bold text-white">{b.title}</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-sm text-white">{b.body}</p>
            </CardContent>
          </Card>
        ))
      }
    </div>
  </div>
</section>
