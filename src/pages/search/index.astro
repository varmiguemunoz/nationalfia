---
import Layout from '@layouts/Layout.astro';
import Contact from '@/components/Contact.astro';
import Search from '@/components/contact/Search.tsx';
---

<Layout title="Search | National Federation of Insurance Agents">
  <div
    class="container mx-auto flex h-[80vh] w-full max-w-7xl flex-col items-center justify-center space-y-10 px-10 py-20"
  >
    <h1 class="mx-auto max-w-3xl text-center text-5xl font-medium">Find our verified official agents below</h1>
    <Search client:load />
    <span class="text-center text-sm text-slate-500">Search for your agent by one of these fields</span>
  </div>
  <Contact />
</Layout>
